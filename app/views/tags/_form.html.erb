<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @tag %>
      <%= form_with(model: @tag,
                    class: 'shadow p-3 mb-3 rounded form-bg',
                    local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, t('name'),
                             class: 'col-2 col-form-label text-light' %>
          <div class="col-10">
            <%= f.text_field :name, class: 'form-control shadow rounded',
                                    placeholder: t('enter_a_tag_name') %>
          </div>
        </div>
        <div class="mt-4 mb-2 d-grid gap-2 col-2 mx-auto">
          <%= f.submit class: 'btn btn-outline-light' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
