<div class="row my-auto">
  <div class="col-8">
    <h2 class="page-title">
      <%= t('.title') %>
    </h2>
  </div>
  <div class="col-4 justify-content-end">
    <button class="btn btn-primary shadow-sm standard-button"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#filters"
            aria-expanded="false"
            aria-controls="collapseExample"
            style="float: right;">
      <%= t('filter').pluralize %>
    </button>
  </div>
</div>
<div id="filters" class="row collapse">
  <div class="col-sm-12">
    <%= render 'filters' %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <%= t('quantity') %>: <%= @tags.total_count %>
          <div>
            <%= link_to t('new_tag'),
                        new_tag_path,
                        class: 'btn btn-primary shadow-sm standard-button mt-4 mb-2' %>
          </div>
          <div class="d-flex justify-content-center mb-3">
            <%= paginate(@tags) %>
          </div>
          <div class="table-responsive mt-2">
            <table class="table table-striped table-bordered m-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t('name') %></th>
                  <th><%= t('created_at') %></th>
                  <th><%= t('updated_at') %></th>
                  <th><%= t('action') %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @tags %>
              </tbody>
            </table>
          </div>
          <br>
          <div class="d-flex justify-content-center mb-3">
            <%= paginate(@tags) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
