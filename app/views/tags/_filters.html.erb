<div class="my-3 p-3 bg-body rounded shadow">
  <%= search_form_for @q, url: tags_path do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-md-4">
          <%= f.label t('name') %>
          <%= f.search_field :name_cont, class: 'form-control input-sm' %>
        </div>
      </div>
    </div>
    <%= f.submit t('search'), class: 'btn btn-primary mt-4 submit' %>
  <% end %>
</div>
