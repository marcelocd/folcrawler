<div class="row">
  <div class="col-sm-12 mt-4">
    <h2 class="page-title">
      <%= t('.title') %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= render 'filters' %>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <div class="card-box">
      <div class="row">
        <div class="col-lg-12">
          <%= t('quantity') %>: <%= @articles.total_count %>
          <div class="d-flex justify-content-center mb-3">
            <%= paginate(@articles) %>
          </div>
          <div class="table-responsive mt-2">
            <table class="table table-striped table-bordered m-0">
              <thead>
                <tr>
                  <th>#</th>
                  <th><%= t('title') %></th>
                  <th><%= t('body') %></th>
                  <th><%= t('source') %></th>
                  <th><%= t('published_at') %></th>
                  <th><%= t('modified_at') %></th>
                </tr>
              </thead>
              <tbody>
                <%= render @articles %>
              </tbody>
            </table>
          </div>
          <br>
          <div class="d-flex justify-content-center mb-3">
            <%= paginate(@articles) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
