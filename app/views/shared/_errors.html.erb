<% if obj.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show"
       role="alert">
    <h4 class="alert-heading">
      <%= t('the_following_errors_prevented', model_name: obj.class.name.downcase) %>:
    </h4>
    <button type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close">
    </button>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
